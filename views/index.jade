extends layout

block content
  div(class='container')
    ng-form(class='form-horizontal')
      div(class='form-group')
        h2(class="ng-binding") #{title}
      br
    
      div(class='form-group')
        label(class="col-sm-2 control-label") Email
        div(class="col-sm-10")
          input(type="text" ng-required="true" class="form-control" placeholder='Email')

      div(class='form-group')
        label(class="col-sm-2 control-label") Service
        div(class="col-sm-10")
          input(type="text" class="form-control" placeholder='Service')
     
      div(class='form-group')
        label(class="col-sm-2 control-label") Price
        div(class="col-sm-10")
          div(class='input-group')
            div(class="input-group-addon") $
            input(type="number" placeholder="Price (required)" ng-required="true" class="form-control")

      div(class='form-group')
        label(class="col-sm-2 control-label") Description
        div(class="col-sm-10")
          textarea(rows="5" md-maxlength="150" class="form-control" placeholder="Enter description here ...")
  
      div(class='form-group')
        div(class='col-sm-2')
        div(class='col-sm-10')
          signature-pad(ng-model="sigPad.width")